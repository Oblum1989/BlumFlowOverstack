<% if @comment.commentable_type == "Question" %>   
    $("<%= escape_javascript(render(@comment)) %>").appendTo('#question-comment-list');
    $('#comment-box').val('');
<% else %>
    $("<%= escape_javascript(render(@comment)) %>").appendTo('#answer-comment-list');
    $('#form-comments-answer #comment-box').val('');
<% end %>


